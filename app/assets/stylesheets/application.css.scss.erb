/*-----------------------Application------------------*/
@import 'normalize';
@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";

$white: #FFFFFF;
$highlight: #d2674e;
$dark: #22292e;
$light: #EDEFF5;


.cf:before, .cf:after {
  content: " ";
  display: table;
}

.cf:after {
  clear: both;
}

body{
  font-family: 'Open Sans', sans-serif;
}

.title {
  text-align: center;
  padding: 2rem 0rem;
  margin-bottom: 3rem;
}

.wrapper {
  width: 80%;
  margin: 0 auto;
}

.wrapper-skinny {
  width: 50%;
  margin: 0 auto;
}

#main-header {
  color: $dark;
  background: $white;
  padding: 3rem 4rem;
  font-size: 2rem;

  #logo{
      float: left;
      text-transform: uppercase;
      font-weight: 700;
      color: $dark;
      text-decoration: none;
  }
  nav {
    float: right;
    ul {
      list-style: none;
      margin: 0;
      li {
        display: inline;
        margin-right: 1.5rem;
        a {
          color: $dark;
          font-weight: 400;
          text-decoration: none;
        }
      }
    }
  }
}

#alert-wrapper {
  width: 100%;
  position: absolute;
  background: rgba(208,103,82, 0.85);
  z-index: 999;
  p{
    color: $white;
    text-align: center;
    font-weight: 700;
    font-size: 1.25rem;
    padding: 1.5rem 0;
  }
}

#notice-wrapper {
  width: 100%;
  position: absolute;
  background: rgba(0,128,0, 0.85);
  z-index: 999;
  p{
    color: $white;
    text-align: center;
    font-weight: 700;
    font-size: 1.25rem;
    padding: .75rem 0;
  }
}

/*------------------Welcome page------------------*/
#background {
  background-image: url(<%= asset_path 'redditreader.jpg' %>);
  height: 100vh;
  background-size: cover;
  background-position: center;
  text-align: center;
  background-attachment: fixed;
  header {
    padding: 3rem 0;
    #logo {
      float: left;
      margin-left: 2.5rem;
      text-transform: uppercase;
      font-weight: 700;
      color: $white;
      text-decoration: none;
    }
    nav {
      float: right;
      ul {
        list-style: none;
        margin: 0;
        li {
          display: inline;
          margin-right: 2rem;
          a {
            color: $white;
            font-weight: 400;
            text-decoration: none;
          }
        }
      }
    }
  }
  h1 {
    padding: 7rem 0 7rem 0;
    a {
      color: $white;
      font-size: 5rem;
      font-weight: 300;
      letter-spacing: 1.5rem;
      margin: 2rem 0 2rem 0;
      text-decoration: none;
    }
  }
}

.button {
  margin: 1.5rem 2.5% 0 2.5%;
}

.button {
  color: $white;
  text-decoration: none;
  font-size: 2rem;
  padding: 1rem 2rem;
  border-radius: 4rem;
  outline: none;
  border: none;
  display: inline-block;
  min-width: 8.5rem
}

.button-highlight {
  background: $highlight;
  transition: background .4s ease-in-out;
  &:hover {
    background: darken($highlight, 7.5%);
    text-decoration: none;
    color: $white;
  }
}

.button-white {
  background: $white;
  color: $dark;
  transition: background .4s ease-in-out;
  &:hover {
    background: darken($white, 7.5%);
    text-decoration: none;
    color: $white;
  }
}

// ----------------------------Feed/liked-----------------------------//

#feed {
  width: 70%;
  ul {
    list-style: none;
  }
}

//--------------------------Signin/up-----------------------//
.field {
  margin: .5rem 0 1.5rem 0;
}

input[type="email"], input[type="text"], input[type="password"], textarea {
  width: 100%;
  height: 2rem;
  padding: .25rem 1rem;
  background: $light;
  border: 1px solid darken($light, 5%);
  border-radius: .35rem;
  margin-top: .5rem;
}

textarea {
  min-height: 8rem;
  margin-top: .5rem !important;
}

#form {
  padding: 0 0 3rem 0
}

