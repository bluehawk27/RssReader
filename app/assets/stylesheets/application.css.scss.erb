/*-----------------------Application------------------*/
@import "font-awesome-sprockets";
@import "font-awesome";

$white: #FFFFFF;
$highlight: #d2674e;
$dark: #22292e;
$light: #EDEFF5;

@import 'normalize';

.cf:before, .cf:after {
  content: " ";
  display: table;
}

.cf:after {
  clear: both;
}

body{
  font-family: 'Open Sans', sans-serif;
}

.wrapper {
  width: 80%;
  margin: 0 auto;
}

.wrapper-skinny {
  width: 50%;
  margin: 0 auto;
}

/*------------------Welcome page------------------*/
#background {
  background-image: url(<%= asset_path 'redditreader.jpg' %>);
  height: 100vh;
  background-size: cover;
  background-position: center;
  text-align: center;
  background-attachment: fixed;
  header {
    padding: 3rem 0;
    #logo {
      float: left;
      margin-left: 2.5rem;
      text-transform: uppercase;
      font-weight: 700;
      color: $white;
      text-decoration: none;
    }
    nav {
      float: right;
      ul {
        list-style: none;
        margin: 0;
        li {
          display: inline;
          margin-right: 2rem;
          a {
            color: $white;
            font-weight: 400;
            text-decoration: none;
          }
        }
      }
    }
  }
  h1 {
    padding: 7rem 0 7rem 0;
    a {
      color: $white;
      font-size: 5rem;
      font-weight: 300;
      letter-spacing: 1.5rem;
      margin: 2rem 0 2rem 0;
      text-decoration: none;
    }
  }
}

.button {
  margin: 1.5rem 2.5% 0 2.5%;
}

.button {
  color: $white;
  text-decoration: none;
  font-size: 1rem;
  padding: 1rem 2rem;
  border-radius: 2rem;
  outline: none;
  border: none;
  display: inline-block;
  min-width: 8.5rem
}

.button-highlight {
  background: $highlight;
  transition: background .4s ease-in-out;
  &:hover {
    background: darken($highlight, 7.5%);
  }
}

.button-white {
  background: $white;
  color: $dark;
  transition: background .4s ease-in-out;
  &:hover {
    background: darken($white, 7.5%);
  }
}
